Largest number in Array




#include<stdio.h>
#include<conio.h>
int main ()
{
    int a[10],i,large;
    printf("Enter the number:\n");
    scanf("%d",&a[0]);
    large=a[0];
    for(i=0;i<10;i++)
    {
        scanf("%d",&a[i]);
        if(a[i]>large)
        {
            large=a[i];
        }
    }
    printf("Largest number: %d\n",large);

    return 0;
}
