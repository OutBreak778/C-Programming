Perfect number








#include<stdio.h>
#include<conio.h>
int main ()
{
    int number,i,sum=0;
    printf("Enter the number\n");
    scanf("%d",&number);
    i=1;
    while(i<number)
    {
        if(number%i==0)
        sum+=i;
        i++;
    }
    if(sum==number)
        printf("%d is perfect number\n",number);
    else  
        printf("%d is not a perfect number\n",number);

    return 0;
}
