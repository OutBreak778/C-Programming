Smallest number in Array



#include<stdio.h>
#include<conio.h>
int main ()
{
    int a[10],i,small;
    printf("Enter the number:\n");
    scanf("%d",&a[0]);
    small=a[0];
    for(i=0;i<10;i++)
    {
        scanf("%d",&a[i]);
        if(a[i]<small)
        {
            small=a[i];
        }
    }
    printf("Smallest number: %d\n",small);


    return 0;
}
