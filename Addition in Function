Addition in Function






#include<stdio.h>
#include<conio.h>
void number(int a,int b);
int main ()
{
    int a,b,i;
    for(i=0;i<6;i++)
    {
        printf("Enter the first number\n");
        scanf("%d",&a);
        printf("Enter the second number\n");
        scanf("%d",&b);
        number(a,b);
    }
    return 0;
}
void number(int a,int b)
{
    int c;
    c=a+b;
    printf("The addition of %d and %d is %d\n",a,b,c);
}
